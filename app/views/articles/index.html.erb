<p>
	<%= link_to '新規投稿', new_article_path %>
</p>

<div class="article-list" >
<h1>投稿一覧</h1>
<% @articles.each do |article| %>
<ul>
	<li>
		<%= link_to article.title, article_path(article.id) %>
	</li>
</ul>
<% end %>
</div>

<div class="article-all">
	<% @articles.each do |article| %>
	<div class="article-one">
		<h3>タイトル</h3>
		<%= article.title %>
		<h3>本文</h3>
		<%= article.body %>
		<h3>著者</h3>
		<%= article.author %>
	</div>
	<% end %>
</div>